<?xml version="1.0" encoding="UTF-8"?>
<web_api>
   <name>M7 Auth Api</name>
   <version>0.1</version>
   <purpose>Servicios de login y verificaci√≥n de sesiones</purpose>
   <web_methods_collection>
       <web_method>
           <endpoint>_ws_auth.php</endpoint>
           <description>Log into the system</description>
           <params_collection>
               <param name="action">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <default>login</default>
               </param>
               <param name="pwd">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>1</min_length>
               </param>
               <param name="email">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>5</min_length>
               </param>
           </params_collection>
       </web_method>
             <web_method>
           <endpoint>_ws_auth.php</endpoint>
           <description>Register</description>
           <params_collection>
               <param name="action">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <default>register</default>
               </param>
                <param name="name">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>4</min_length>
               </param>
               <param name="pwd">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>1</min_length>
               </param>
               <param name="email">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>5</min_length>
               </param>
           </params_collection>
       </web_method>
 
       <web_method>
           <endpoint>_ws_auth.php</endpoint>
           <description>Logout into the system</description>
           <params_collection>
               <param name="action">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <default>logout</default>
               </param>
           </params_collection>
       </web_method>

        <web_method>
           <endpoint>_ws_auth.php</endpoint>
           <description>Add in cart</description>
           <params_collection>
               <param name="action">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <default>addtocart</default>
               </param>
               <param name="product">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>1</min_length>
               </param>
               <param name="quantity">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <min_length>1</min_length>
               </param>
           </params_collection>
       </web_method>

       <web_method>
           <endpoint>_ws_auth.php</endpoint>
           <description>get cart</description>
           <params_collection>
               <param name="action">
                   <type>string</type>
                   <mandatory>yes</mandatory>
                   <default>getcart</default>
               </param>
           </params_collection>
       </web_method>

 
   </web_methods_collection>
</web_api>
